<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CalculatorD" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.CalculatorD" parent="Base.Theme.CalculatorD" />
    //creating our own styles
    <style name="number">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>    //weight 1 means the width alloted to thiis textview is 1 in proportion, let say total is 1+1+1+1=4, so here giving 1 is 1/4,i.e. 25%
        <item name="android:background">@android:color/holo_red_dark</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>

    </style>
    <style name="numberLand">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>    //weight 1 means the width alloted to thiis textview is 1 in proportion, let say total is 1+1+1+1=4, so here giving 1 is 1/4,i.e. 25%
        <item name="android:background">@android:color/holo_red_dark</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>

    </style>
</resources>