     </TableRow>
     <TableRow tools:ignore="ExtraText">
         <TextView
             android:id="@+id/sine"
             android:layout_height="50dp"
             android:layout_width="wrap_content"
             android:text="sin"
             style="@style/numberLand"
             android:textStyle="bold"
             android:background="#8D1DDBC9"/>
         <TextView
             android:id="@+id/cosine"
             android:layout_height="50dp"
             android:layout_width="wrap_content"
             android:text="cos"
             style="@style/numberLand"
             android:textStyle="bold"
             android:background="#8D1DDBC9"/>
         <TextView
             android:id="@+id/tangent"
             android:layout_height="50dp"
             android:layout_width="wrap_content"
             android:text="tan"
             style="@style/numberLand"
             android:textStyle="bold"
             android:background="#8D1DDBC9"/>
         <TextView
             android:id="@+id/one"
             android:layout_height="50dp"
             android:layout_width="wrap_content"
             android:text="1"
             style="@style/numberLand"/>

         <TextView
             android:id="@+id/two"
             android:layout_height="50dp"
             android:layout_width="wrap_content"
             android:text="2"
             style="@style/numberLand"/>

         <TextView
             android:id="@+id/three"
             android:layout_height="50dp"
             android:layout_width="wrap_content"
             android:text="3"
             style="@style/numberLand"/>
         <TextView
             android:id="@+id/subtraction"
             android:layout_height="50dp"
             android:layout_width="wrap_content"
             android:text="-"
             style="@style/numberLand"
             android:textStyle="bold"
             android:background="#8D1DDBC9"/>


         <TextView
             android:id="@+id/modulo"
             android:layout_height="50dp"
             android:layout_width="wrap_content"
             android:text="%"
             style="@style/numberLand"
             android:background="#8D1DDBC9"/>


     </TableRow>
     <TableRow tools:ignore="ExtraText">
         <TextView
             android:id="@+id/e"
             android:layout_height="50dp"
             android:layout_width="wrap_content"
             android:text="e"
             style="@style/numberLand"
             android:textStyle="bold"
             android:background="#8D1DDBC9"/>
         <TextView
             android:id="@+id/ln"
             android:layout_height="50dp"
             android:layout_width="wrap_content"
             android:text="ln"
             style="@style/numberLand"
             android:textStyle="bold"
             android:background="#8D1DDBC9"/>
         <TextView
             android:id="@+id/log"
             android:layout_height="50dp"
             android:layout_width="wrap_content"
             android:text="log"
             style="@style/numberLand"
             android:textStyle="bold"
             android:background="#8D1DDBC9"/>
         <ImageView
             android:id="@+id/back"
             android:layout_height="50dp"
             android:layout_width="wrap_content"
             android:src="@drawable/backspace_icon"
             android:scaleType="center"

             style="@style/numberLand"
             android:background="@color/cardview_dark_background"/>
         <TextView
             android:id="@+id/zero"
             android:layout_height="50dp"
             android:layout_width="wrap_content"
             android:text="0"
             style="@style/numberLand"/>

         <TextView
             android:id="@+id/decimal"
             android:layout_height="50dp"
             android:layout_width="wrap_content"
             android:text="."
             style="@style/numberLand"/>
         <TextView
             android:id="@+id/addition"
             android:layout_height="50dp"
             android:layout_width="wrap_content"
             android:text="+"
             style="@style/numberLand"
             android:textStyle="bold"
             android:background="#8D1DDBC9"/>

         <TextView
             android:id="@+id/equals"
             android:layout_height="50dp"
             android:layout_width="wrap_content"
             android:text="="
             style="@style/numberLand"
             android:textStyle="bold"
             android:background="#EB8E05"/>



     </TableRow>
 </TableLayout>
    <TextView
        android:id="@+id/expression"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/result"
        app:layout_constraintVertical_bias="0"/>

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/tableLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="7dp"
        android:textSize="30sp"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="#EB8E05"
         app:layout_constraintHorizontal_bias="0.8"/>





</androidx.constraintlayout.widget.ConstraintLayout>