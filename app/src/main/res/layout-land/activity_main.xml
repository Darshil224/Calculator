     <TableRow tools:ignore="ExtraText">
         <TextView
             android:id="@+id/openBracket"
             android:layout_height="50dp"
             android:layout_width="wrap_content"
             android:text="("
             style="@style/numberLand"
             android:textStyle="bold"
             android:background="#8D1DDBC9"/>
         <TextView
             android:id="@+id/closeBracket"
             android:layout_height="50dp"
             android:layout_width="wrap_content"
             android:text=")"
             style="@style/numberLand"
             android:textStyle="bold"
             android:background="#8D1DDBC9"/>
         <TextView
             android:id="@+id/pi"
             android:layout_height="50dp"
             android:layout_width="wrap_content"
             android:text="Ï€"
             style="@style/numberLand"
             android:textStyle="bold"
             android:background="#8D1DDBC9"/>
         <TextView
             android:id="@+id/seven"
             android:layout_height="50dp"
             android:layout_width="wrap_content"
             android:text="7"

             style="@style/numberLand"/>

         <TextView
             android:id="@+id/eight"
             android:layout_height="50dp"
             android:layout_width="wrap_content"
             android:text="8"
             style="@style/numberLand"/>

         <TextView
             android:id="@+id/nine"
             android:layout_height="50dp"
             android:layout_width="wrap_content"
             android:text="9"
             style="@style/numberLand"/>
         <TextView
             android:id="@+id/division"
             android:layout_height="50dp"
             android:layout_width="wrap_content"
             android:text="/"
             style="@style/numberLand"
             android:textStyle="bold"
             android:background="#8D1DDBC9"/>


         <TextView
             android:id="@+id/ac"
             android:layout_height="50dp"
             android:layout_width="wrap_content"
             android:text="AC"
             style="@style/numberLand"
             android:background="@color/cardview_dark_background"/>


     </TableRow>
     <TableRow tools:ignore="ExtraText">
         <TextView
             android:id="@+id/inv"
             android:layout_height="50dp"
             android:layout_width="wrap_content"
             android:text="INV"
             style="@style/numberLand"
             android:textStyle="bold"
             android:background="#8D1DDBC9"/>
         <TextView
             android:id="@+id/exponent"
             android:layout_height="50dp"
             android:layout_width="wrap_content"
             android:text="^"
             style="@style/numberLand"
             android:textStyle="bold"
             android:background="#8D1DDBC9"/>
         <TextView
             android:id="@+id/factorial"
             android:layout_height="50dp"
             android:layout_width="wrap_content"
             android:text="!"
             style="@style/numberLand"
             android:textStyle="bold"
             android:background="#8D1DDBC9"/>
         <TextView
             android:id="@+id/four"
             android:layout_height="50dp"
             android:layout_width="wrap_content"
             android:text="4"
             style="@style/numberLand"/>

         <TextView
             android:id="@+id/five"
             android:layout_height="50dp"
             android:layout_width="wrap_content"
             android:text="5"
             style="@style/numberLand"/>

         <TextView
             android:id="@+id/six"
             android:layout_height="50dp"
             android:layout_width="wrap_content"
             android:text="6"
             style="@style/numberLand"/>

         <TextView
             android:id="@+id/multiplication"
             android:layout_height="50dp"
             android:layout_width="wrap_content"
             android:text="*"
             style="@style/numberLand"
             android:textStyle="bold"
             android:background="#8D1DDBC9"/>
         <TextView
             android:id="@+id/squareRoot"
             android:layout_height="50dp"
             android:layout_width="wrap_content"
             android:text="sqrt"
             style="@style/numberLand"
             android:background="#8D1DDBC9"/>
